{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/"
  },
  "include": [
    "src/**/*.ts"
  ]
}